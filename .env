# Secure OCPP-to-CAN Bridge Configuration
# Bu dosyayı .env olarak kopyalayın: cp .env.example .env

# ============================================
# OCPP Ayarları
# ============================================
# CSMS (Central System Management Server) WebSocket URL
CSMS_URL=ws://localhost:9000/ocpp

# Charge Point ID
CHARGE_POINT_ID=CP_001

# ============================================
# CAN-Bus Ayarları
# ============================================
# CAN interface adı (vcan0, can0, vb.)
CAN_INTERFACE=vcan0

# ============================================
# Blockchain Ayarları
# ============================================
# Dijital imza kullanımı (true/false)
ENABLE_DIGITAL_SIGNATURE=true

# ============================================
# IDS (Intrusion Detection System) Ayarları
# ============================================
# ML tabanlı IDS aktif mi? (true/false)
ENABLE_ML_IDS=true

# ML model dosya yolu (opsiyonel, boş bırakılabilir)
ML_MODEL_PATH=

# Anomali tespit eşiği (0.0 - 1.0)
ANOMALY_THRESHOLD=0.7

# ============================================
# API Server Ayarları
# ============================================
# API sunucu host adresi
API_HOST=0.0.0.0

# API sunucu portu
API_PORT=8000

# API URL (bridge'den API'ye erişim için)
API_URL=http://127.0.0.1:8000

# ============================================
# Dashboard Ayarları
# ============================================
# Dashboard portu (Streamlit varsayılan: 8501)
DASHBOARD_PORT=8501

# ============================================
# Log Ayarları
# ============================================
# Log dosya yolu
LOG_FILE=./logs/bridge.log
